#Storage location with logging
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true
#Logging data location
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
#Network interfaces
net:
  port: {{mongo_port | default('27017')}}
  bindIp: {{mongo_bind_ip | default('0.0.0.0')}}